
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/dashboard"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Post</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="PUT" id="update_user" action="http://localhost:300/post/<%= post._id %>">
    <div class="new_user">
        <div class="form-group">
            <label for="title" class="text-light">title</label>
            <input type="text" name="title" value="<%= post.title %>" placeholder="title...">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Description</label>
            <input type="text" name="txt" value="<%= post.txt %>" placeholder="txt">
        </div>
        <div class="form-group">

            <input type="hidden"  name="_id" value="<%= post._id %>" placeholder="txt">
        </div>
        <div class="form-group">
            <label for="desctiption" class="text-light">file1</label>
            <input type="file" name="myfile" onchange="getImagePreview(event)"/>
            <div id="preview">
                <img src="http://localhost:300/<%= post.img %>">
            </div>
        </div>
        <div class="form-group">
            <label for="desctiption" class="text-light">file2</label>
            <input type="file" name="file2" value="" placeholder="chamber 2: aahiya aahiya che">
        </div>
 

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
    
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
<script>
    function getImagePreview(event) {
     let image = URL.createObjectURL(event.target.files[0])
let imagediv = document.getElementById('preview');
let newimg = document.createElement('img');
newimg.src = image; 
imagediv.appendChild(newimg);
    }
</script>

